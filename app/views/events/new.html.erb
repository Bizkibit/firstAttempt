<h1>Events#new</h1>

<%= form_for [@organization, @event] do |f| %>

  <div class="form-group">
    <%= f.label :start_date %>
    <%= f.date_field :start_date, start_year: Date.today.year %>
  </div>
  <div class="form-group">
    <%= f.label :end_date %>
    <%= f.date_field :end_date, start_year: Date.today.year %>
  </div>
  <div class="form-group">
    <%= f.label :start_time %>
    <%= f.time_field :start_time %>
  </div>
  <div class="form-group">
    <%= f.label :end_time %>
    <%= f.time_field :end_time %>
  </div>
  <div class="form-group">
    <%= f.label :details %>
    <%= f.text_area :details %>
  </div>
  <div class="form-group">
    <%= f.label :spots%>
    <%= f.number_field :spots %>
  </div>
  <%= f.submit %>

<% end  %>
