<h1>Users#show</h1>

<div class="container">
  <div class="row">
    <div class="col-lg-2">
      <%= image_tag @user.picture.url(:medium), class:'img-circle' if @user.picture.present? %>
    </div>
    <div class="col-lg-2">
      <p>Name: <strong><%= @user.full_name %></strong></p>
      <%= link_to 'Edit profile', edit_user_path(@user), method: :patch %>
    </div>
  </div>

</div>
